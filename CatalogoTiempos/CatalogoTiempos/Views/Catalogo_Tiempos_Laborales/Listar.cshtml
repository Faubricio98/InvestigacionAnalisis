
@{
    ViewBag.Title = "Catálogo Tiempos Laborales";
}

<div class="container">
    <div class="row mt-2">
        <h3>@ViewBag.Message</h3>
    </div>


    <div class="row justify-content-center">
        <div class="col-6 mt-2 ">
            <div class="card" style="background-color: #FAFAFA">
                <div class="card-header">
                    <h5 class="card-tittle">Añadir nuevo tiempo laboral</h5>
                </div>

                <div class="card-body">
                    <form action="@Url.Action("Agregar", "Catalogo_Tiempos_Laborales")" method="post">
                        <div class="form-group d-flex justify-content-between">
                            <label class="font-weight-normal" for="horario">Tipo:</label>
                            <input type="text" class="form-control form-control-sm" id="horario" name="horario" placeholder="Ingrese el tipo de tiempo" required>
                        </div>

                        <div class="row justify-content-center mt-2">
                            <button class="btn btn-primary btn-sm" type="submit">Guardar</button>
                        </div>
                    </form>
                    <span>@ViewBag.Respuesta</span>
                    <span id="respuesta"></span>
                </div>
            </div>
        </div>
    </div>






    <div class="row mt-3">
        <div class="col-12">
            <div class="d-flex justify-content-between mt-3">
                <div class="col-6">
                    <input type="search" id="search" placeholder="Buscar" class="form-control form-control-sm">
                </div>
                <div>
                    <input type="button" value="Reporte" class="btn btn-secondary btn-sm">
                </div>
            </div>
            <table id="example1" class="table table-bordered table-hover">
                <thead class="thead-dark text-center">
                    <tr>
                        <th>Tipo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                @model CatalogoTiempos.Models.Tiempos
                <tbody>
                    @foreach (CatalogoTiempos.Models.Tiempos temp in ViewBag.ListaTiempos)
                    {

                        <tr>
                            <td>@temp.TC_Horario</td>
                            <td class="d-flex justify-content-center">
                                <button id="@temp.TC_Horario" type="button" class="btn btn-success btn-sm" onclick="editMyModal(this)" data-toggle="modal" data-target="#modal-editar"><i class="fa fa-pen-square"></i> </button>
                                <button id="@temp.TC_Horario" class="btn btn-danger btn-sm" onclick="alertAdvertenciaEliminarTiempos(this)"><i class="fa fa-trash"></i> </button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<!-- Modal de editar -->


<div class="modal fade" id="modal-editar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modificar tiempo laboral</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form action="@Url.Action("Actualizar", "Catalogo_Tiempos_Laborales")" method="post">
                <div class="modal-body">
                    <div class="form-group ">
                        <label class="font-weight-normal" for="viejo">Nombre actual:</label>
                        <input type="text" class="form-control form-control-sm" id="viejo" name="viejo" required>
                    </div>

                    <div class="form-group ">
                        <label class="font-weight-normal" for="nuevo">Nuevo nombre:</label>
                        <input type="text" class="form-control form-control-sm" id="nuevo" name="nuevo" required>
                    </div>

                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <div>
                        <button class="btn btn-info" type="submit">Editar</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

